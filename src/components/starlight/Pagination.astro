---
import { Icon } from "@astrojs/starlight/components";

const { pagination } = Astro.locals.starlightRoute;
const { prev, next } = pagination ?? {};
---

{
  (prev || next) && (
    <nav
      class:list={[
        // mobile devices
        "flex gap-4 flex-col md:flex-row",

        // desktop devices
        prev && next && "md:justify-between",
        !prev && next && "md:justify-end",
        prev && !next && "md:justify-start",
      ]}
    >
      {prev && (
        <a
          href={prev.href}
          rel="prev"
          class="text-(--color-text) w-full md:w-60"
        >
          <div class="p-4 md:p-3 border border-(--color-border) rounded-xl flex flex-row items-center gap-1.5 hover:bg-white/5 transition">
            <Icon name="left-caret" label="Previous Page" size="24px" />

            <div class="flex-1 flex flex-col">
              <span class="text-[14px] leading-5 opacity-70">Previous</span>
              <span class="text-[18px] leading-6 font-medium truncate">
                {prev.label}
              </span>
            </div>
          </div>
        </a>
      )}

      {next && (
        <a
          href={next.href}
          rel="next"
          class="text-(--color-text) w-full md:w-60"
        >
          <div class="p-4 md:p-3 border border-(--color-border) rounded-xl flex flex-row-reverse items-center gap-1.5 hover:bg-white/5 transition">
            <Icon name="right-caret" label="Next Page" size="24px" />

            <div class="flex-1 flex flex-col text-right">
              <span class="text-[14px] leading-5 opacity-70">Next</span>
              <span class="text-[18px] leading-6 font-medium truncate">
                {next.label}
              </span>
            </div>
          </div>
        </a>
      )}
    </nav>
  )
}
